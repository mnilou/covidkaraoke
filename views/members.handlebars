<nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="/logout">
        Logout
      </a>
    </div>
  </div>
</nav>
 <div class="container">
      <div class="row">
        <div class="col-md-4">
          <form action="/members" id="search-form">
            <div class="form-group">
              <label for="song-search-input">Enter track title</label>
              <input
                id="song-search-input"
                class="form-control"
                name="song"
                type="text"
              />
            </div>
            <div class="form-group">
              <button type="submit" class="btn btn-primary btn-block">
                Search
              </button>
            </div>
          </form>
          <div id="search-results"></div>
        </div>
        <div class="col-md-8">
          <div id="spotify-embed"></div>
		  <div>
			  <p id="lyrics"></p>
		  </div>
        </div>
      </div>
    </div>
<div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h2>Welcome <span class="member-name"></span></h2>
      </div>
    </div>
</div>

<form class="search-form">
  <label for="songTitle">Song Title</label>
  <input type="title" class="form-control" id="title-input" placeholder="Song Title">
  <label for="songArtist">Artist</label>
  <input type="artist" class="form-control" id="artist-input" placeholder="Artist">
</form>

<div class="card" style="width: 18rem;">
  <div class="card-body"></div>
  <div id="spotify-embed"></div>
</div>
<h2>Saved Songs</h2>
<div>
{{#each songs}}
  <div class="panel panel-default">
    <div class="panel-heading">
      <h2>{{songTitle}}</h2>
        <small>{{createdAt}}</small>
      </h2>
      <h5 style="float: right; color: blue; margin-top: -10px;">Written by: {{artist}} </h5>
    </div>
  </div>
{{/each}}
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script type="text/javascript" src="js/members.js"></script>
