	<body>
	<div class="jumbotron jumbotron-fluid">
      <div class="container">
        <h1 class="display-4">Covid Karaoke</h1>
        <p class="lead">
          <p>Search for your favorite song and see the lyrics on display as you listen. Create your own concert series at home powered by Spotify.</p>
        </p>
      </div>
    </div>
    <div class="container">
      <div class="row">
        <div class="col-md-4">
          <form action="/" id="search-form">
            <div class="form-group">
              <label for="song-search-input">Enter track title</label>
              <input
                id="song-search-input"
                class="form-control"
                name="song"
                type="text"
              />
            </div>
            <div class="form-group">
              <button type="submit" class="btn btn-primary btn-block">
                Search
              </button>
            </div>
          </form>
          <div id="search-results"></div>
        </div>
        <div class="col-md-8">
          <div id="spotify-embed"></div>
		  <div>
			  <p id="lyrics">hello</p>
		  </div>
        </div>
      </div>
    </div>
    <script src="js/spotify-embed.js"></script>
    <script src="js/index.js"></script>
